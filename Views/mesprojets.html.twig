{% extends "index.html.twig" %}

{% block section %}


<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Mes projets</h2>
        <a href="?action=ajout" class="btn btn-outline-primary">Ajouter un projet</a>
    </div>
    <div class="row">
        <!-- Début de la carte de projet -->
        {% for projet in projets %}
        <div class="col-md-3 mb-4">
            <div class="card">
                <img src="path-to-your-image.jpg" class="card-img-top" alt="Image du projet">
                <div class="card-body">
                    <h5 class="card-title">Benchmark</h5>
                    <p class="card-text">Projet réalisé dans le cadre de la SAé 102 en première année de MMI.</p>
                    <p class="card-text"><small class="text-muted">Auteur : Clément Lorieau</small></p>
                    <div class="d-flex justify-content-between">
                        <form method="post" action="?action=details">
                            <input type="hidden" name="idprojet" id="idprojet" value="{{projet.idprojet}}">
                            <button type="submit" name="détails" class="btn btn-outline-primary">Détails</button>
                        </form>
                        <a href="#" class="btn btn-outline-danger">Supprimer</a>
                    </div>
                    
                </div>
            </div>
        </div>
        {% endfor %}
        <!-- Fin de la carte de projet -->
    </div>
</div>

{% endblock %}
