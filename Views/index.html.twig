	<link rel="stylesheet" href="design.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-dark navbar-custom">
	<div class="container-fluid">
		<a class="navbar-brand" href="#"><img class="logommi ms-3" src="img/logommi.png" alt="Logo MMI"></a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse justify-content-center" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<a class="nav-link text-light" href="?action=accueil">Accueil</a>
				<a class="nav-link text-light" href="?action=projets">Projets</a>
				{% if acces == "oui" %}
							<a class="nav-link text-light" href="?action=mesprojets">Mes Projets</a>
						{% else %}
							<a class="nav-link text-light" href="?action=login">Mes Projets</a>
						{% endif %}
			
				
			</div>
		</div>
		 <div class="navbar-profile">
        {% if acces == "oui" %}
            <span class="nom-utilisateur text-light">Clement Lorieau</span>
            <a href="?action=profil"><img src="img/profil.webp" alt="Image de profil" id="profilimg"></a>
            <a class="btn btn-primary" href="?action=logout">Deconnexion</a>
        {% else %}
            <a class="btn btn-primary" href="?action=login">Connexion</a>
        {% endif %}
    </div>
	</div>
</nav>


<div class="container-fluid">
	{{message}}
	{% block section %}

	

	{% endblock %}
</div>

<footer class="bg-dark text-light text-center text-lg-start p-3">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-6 mb-2 mb-lg-0">
				<p>© 2023 Tout droits réservés</p>
			</div>
			<div class="col-lg-6 mb-2 mb-lg-0 d-flex justify-content-end">
				<a class="nav-link text-light" href="?action=accueil">Accueil</a>
				<a class="nav-link text-light" href="?action=projets">Projets</a>
				{% if acces == "oui" %}
							<a class="nav-link text-light" href="?action=mesprojets">Mes Projets</a>
							<a class="nav-link text-light" href="?action=logout">Deconnexion</a>
						{% else %}
							<a class="nav-link text-light" href="?action=login">Mes Projets</a>
							<a class="nav-link text-light" href="?action=login">Connexion</a>
						{% endif %}
				<a class="navbar-brand" href="#"><img class="logommi" src="img/logommi.png" alt="Logo MMI"></a>
			</div>
		</div>
	</div>
</footer>


<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
