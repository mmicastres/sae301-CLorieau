{% extends "index.html.twig" %}

{% block section %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Créer un compte</h3>
                    <form method="post" action="index.php">
                        <div class="mb-3">
                            <label for="nom" class="form-label">Nom *</label>
                            <input type="text" id="nom" class="form-control" name="nom" required placeholder="Entrez un nom">
                        </div>
                        <div class="mb-3">
                            <label for="prenom" class="form-label">Prénom *</label>
                            <input type="text" id="prenom" class="form-control" name="prenom" required placeholder="Entrez un prénom">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Mail *</label>
                            <input type="email" id="mail" class="form-control" name="mail" required placeholder="Entrez un mail IUT">
                        </div>
                        <div class="mb-3">
                            <label for="identifiant" class="form-label">Identifiant IUT *</label>
                            <input type="text" id="idiut" class="form-control" name="idiut" required placeholder="XXXXXXXXA">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe *</label>
                            <input type="password" id="mdp" class="form-control" name="mdp" required placeholder="Entrez un mot de passe">
                        </div>
                        <button type="submit" class="btn btn-primary w-100" name="inscription" value="inscription">S'inscrire</button>
                        <div class="mt-4 text-center">
                            <a href="?action=login" class="text-decoration-none">Déjà un compte ? Connexion</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}